<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.Arnold.LiftLog.LoadScreenActivity"
    android:gravity="center"
    android:background="#0099FF">



    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:src="@drawable/loadscreenicon2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:fontFamily="palatino"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:id="@+id/loadscreen_text"
        android:text="@string/app_name"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:fontFamily="palatino"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:id="@+id/loadscreen_text2"
        android:text="The quick brown fox\njumps over a lazy dog"
        android:layout_below="@+id/loadscreen_text"
        android:layout_centerHorizontal="true">
    </TextView>

</RelativeLayout>
